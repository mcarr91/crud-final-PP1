<!DOCTYPE html>
<html>
<%- include('../head.ejs') %>
<body>
    <%- include('../partials/navbar.ejs') %>
    <div class="container mt-4">
        <h1>Editar Persona</h1>
        
        <div id="formularioPersona">
            <form id="personaForm" action="/personas/actualizar" method="POST">
                <input type="hidden" name="id" id="personaId" value="<%= persona.id %>">
                <div>
                    <label for="nombre">Nombre:</label>
                    <input type="text" id="nombre" name="nombre" value="<%= persona.nombre %>" required>
                </div>
                <div>
                    <label for="email">Email:</label>
                    <input type="email" id="email" name="email" value="<%= persona.email %>" required>
                </div>
                <div class="flex flex-end">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Guardar
                    </button>
                    <a href="/personas" class="btn btn-secondary">
                        <i class="fas fa-times"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</body>
</html> 