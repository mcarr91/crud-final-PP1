<!DOCTYPE html>
<html>
<%- include('../head.ejs') %>
<body>
    <%- include('../partials/navbar.ejs') %>
    <div class="container mt-4">
        <h1>Editar Oficina</h1>
        
        <div id="formularioPersona">
            <form id="oficinaForm" action="/oficinas/actualizar" method="POST">
                <input type="hidden" name="id" id="oficinaId" value="<%= oficina.id %>">
                <div>
                    <label for="denominacion">Denominaci√≥n:</label>
                    <input type="text" id="denominacion" name="denominacion" value="<%= oficina.denominacion %>" required>
                </div>
                <div class="flex flex-end">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Guardar
                    </button>
                    <a href="/oficinas" class="btn btn-secondary">
                        <i class="fas fa-times"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</body>
</html> 