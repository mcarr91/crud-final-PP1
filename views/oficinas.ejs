<!DOCTYPE html>
<html>
<%- include('./head.ejs') %>

    <body>
        <%- include('./partials/navbar.ejs') %>
        <div class="container mt-4">
            <h1><%= mensaje %></h1>

            <!-- Botones de acción -->
            <div class="flex mb-4">
                <a href="/oficinas/buscar">
                    <button type="button" class="btn btn-secondary">
                        <i class="fas fa-search"></i> Buscar Oficinas
                    </button>
                </a>
                <a href="/oficinas/crear" class="ml-2">
                    <button type="button" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Nueva Oficina
                    </button>
                </a>
            </div>

            <!-- Tabla de oficinas -->
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Denominación</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (oficinas && oficinas.length > 0) { %>
                        <% oficinas.forEach(oficina => { %>
                            <tr>
                                <td><%= oficina.id %></td>
                                <td><%= oficina.denominacion %></td>
                                <td>
                                    <div class="flex">
                                        <a href="/oficinas/editar/<%= oficina.id %>" class="btn btn-secondary">
                                            <i class="fas fa-edit"></i> Editar
                                        </a>
                                        <a href="/oficinas/eliminar/<%= oficina.id %>" 
                                           onclick="return confirm('¿Está seguro de eliminar esta oficina?')"
                                           class="btn btn-danger">
                                            <i class="fas fa-trash"></i> Eliminar
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="3" class="text-center">No hay oficinas registradas</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </body>
</html> 