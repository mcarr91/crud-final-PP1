<!DOCTYPE html>
<html>
<%- include('./head.ejs') %>

    <body>
        <%- include('./partials/navbar.ejs') %>
        <div class="container mt-4">
            <h1><%= mensaje %></h1>

            <!-- Botón de búsqueda -->
            <div class="flex mb-4">
                <a href="/personas/buscar">
                    <button type="button" class="btn btn-secondary">
                        <i class="fas fa-search"></i> Buscar Personas
                    </button>
                </a>
                <a href="/personas/crear" class="ml-2">
                    <button type="button" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Nueva Persona
                    </button>
                </a>
            </div>

            <!-- Tabla de personas -->
            <table border="1">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Email</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (personas && personas.length > 0) { %>
                        <% personas.forEach(persona => { %>
                            <tr>
                                <td><%= persona.id %></td>
                                <td><%= persona.nombre %></td>
                                <td><%= persona.email %></td>
                                <td>
                                    <div class="flex">
                                        <a href="/personas/editar/<%= persona.id %>" class="btn btn-secondary">
                                            <i class="fas fa-edit"></i> Editar
                                        </a>
                                        <a href="/personas/eliminar/<%= persona.id %>" 
                                           onclick="return confirm('¿Está seguro de eliminar esta persona?')"
                                           class="btn btn-danger">
                                            <i class="fas fa-trash"></i> Eliminar
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="4">No hay personas registradas</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </body>
</html>